{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@views": ["./src/views"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "app.ts"],
  "exclude": ["node_modules", "dist", "./src/views"]
}
